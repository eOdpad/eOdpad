<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="eOdpad.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">#7635EB</Color>
             <Color x:Key="Accent">#753BE4</Color>
             <OnPlatform x:TypeArguments="Color" x:Key="WindowBackground">
                <On Platform="Android" Value="#F5F5F5"/>
                <On Platform="iOS" Value="White"/>
                <On Platform="UWP" Value="White"/>
            </OnPlatform>
            <OnPlatform x:TypeArguments="x:Double" x:Key="EOdpadListItemTextStyleSize">
                <On Platform="Android" Value="16"/>
                <On Platform="iOS" Value="16"/>
                <On Platform="UWP" Value="13"/>
            </OnPlatform>
        </ResourceDictionary>    
    </Application.Resources>
</Application>