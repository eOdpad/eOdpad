<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eOdpad.Pages.RandomDumpPage"
             Title="Čierna skládka">
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Odoslať" Command="{Binding ToolbarItemCommand}" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <TableView Intent="Form">
            <TableRoot>
                <TableSection Title="Prosím vypľnťe nasledovné údaje a odošlite.">
                    <EntryCell Label="Meno" Placeholder="Meno" Keyboard="Text" />
                    <EntryCell Label="E-Mail" Placeholder="test@test.sk" Keyboard="Email" />
                </TableSection>
                <TableSection Title="Správa und prílohy">
                    <ViewCell>
                       <Editor Keyboard="Text" BackgroundColor="White" HeightRequest="150" MinimumHeightRequest="150" />
                    </ViewCell>
                </TableSection>
            </TableRoot>
        </TableView>
    </ContentPage.Content>
</ContentPage>
