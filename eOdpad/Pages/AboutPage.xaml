<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eOdpad.Pages.AboutPage"
             Title="O Nás">
    <ContentPage.Content>
        <ScrollView Orientation="Vertical" VerticalOptions="FillAndExpand">
            <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand">
                <TableView Intent="Form">
                    <TableRoot>
                        <TableSection>
                            <ViewCell>
                                <StackLayout Orientation="Horizontal" VerticalOptions="Center" Padding="20,0,20,0">
                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="Handle_Tapped" NumberOfTapsRequired="1" />
                                    </StackLayout.GestureRecognizers>
                                    <Label Text="Dotazník spokojnosti" XAlign="Center" />
                                    <Label Text="&gt;" HorizontalOptions="EndAndExpand" XAlign="Center" />
                                </StackLayout>
                            </ViewCell>
                        </TableSection>
                    </TableRoot>
                </TableView>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
